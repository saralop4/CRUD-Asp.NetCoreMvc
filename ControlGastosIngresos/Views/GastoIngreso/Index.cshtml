@model IEnumerable<ControlGastosIngresos.Models.GastoIngreso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ingresos y Gastos</h1>

<form asp-action="index">
    <div class="form-row">
        <div class="form-group col-md-1">
            <lable class="control-label">Mes/Año: </lable>
        </div>
        <div class="form-group col-md-2">
            <input type="number" class="form-control text-right" name="mes"  min="1" max="12" value="@ViewBag.mes"/>
        </div>
        <div  class="form-group col-md-2">
            <input type="number" class="form-control text-right" name="anio" autocomplete="off" value="@ViewBag.anio" />
        </div>

        <div class="form-group col-md-2">
            <input type="submit" class="btn btn-primary" value="Consultar" />
        </div>
     
    </div>
</form>
<br />
<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.NombreCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
